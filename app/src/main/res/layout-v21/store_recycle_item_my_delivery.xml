<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/circular_border_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/deliveryImage"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:src="@drawable/ic_delivery"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >
            <TextView
                android:id="@+id/deliveryName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="@android:color/black"
                android:textSize="19sp"
                android:layout_weight="1"
                android:text="Sandox " />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Status:"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/deliveryStatusBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/status_pending"
                    android:layout_marginStart="10dp"
                    >
                    <TextView
                        android:id="@+id/deliveryStatus"
                        android:layout_width="wrap_content"
                        android:text="En cours"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="10dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>